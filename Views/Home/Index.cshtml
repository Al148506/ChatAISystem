@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/Home.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="home-container full-background">
    <div class="hero-section">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-6 text-center text-lg-start">
                    <h1 class="display-3 fw-bold text-gradient mb-3">Welcome to ChatAISystem</h1>
                    <p class="lead fs-4 mb-4">
                        An AI chat system designed for immersive conversations with the characters you create.
                    </p>
                    <div class="d-flex flex-wrap justify-content-center justify-content-lg-start gap-3 mb-5">
                        <a href="/Chat" class="btn btn-primary btn-lg px-4 rounded-pill">
                            <i class="bi bi-chat-dots-fill me-2"></i>Start Chat
                        </a>
                        <a href="/Character" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                            <i class="bi bi-people-fill me-2"></i>Characters
                        </a>
                        <a href="/User" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                            <i class="bi bi-person-fill-gear me-2"></i>Users
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="illustration-container text-center">
                        <img src="~/Images/RobotIA.jpeg" alt="AI Chat Illustration" class="img-fluid rounded-4 shadow-lg" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="features-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">How does it work?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                                <i class="bi bi-chat-square-text-fill"></i>
                            </div>
                            <h3 class="h5 card-title">Start Conversation</h3>
                            <p class="card-text">Go to the <strong>"Chat"</strong> section to begin a conversation with any of your created characters.</p>
                            <a href="/Chat" class="btn btn-sm btn-link text-decoration-none">Go to Chat →</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-secondary bg-gradient text-white rounded-circle mb-3">
                                <i class="bi bi-person-plus-fill"></i>
                            </div>
                            <h3 class="h5 card-title">Manage Characters</h3>
                            <p class="card-text">Create, edit, or delete characters in the <strong>"Characters"</strong> section to customize your chat experience.</p>
                            <a href="/Character" class="btn btn-sm btn-link text-decoration-none">Manage Characters →</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-secondary bg-gradient text-white rounded-circle mb-3">
                                <i class="bi bi-people-fill"></i>
                            </div>
                            <h3 class="h5 card-title">Manage Users</h3>
                            <p class="card-text">Control system access in the <strong>"Users"</strong> section by managing system users.</p>
                            <a href="/User" class="btn btn-sm btn-link text-decoration-none">Manage Users →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>